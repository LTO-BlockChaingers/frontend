{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@app/*": ["app/*"],
      "@modules/*": ["app/modules/*"],
      "@models/*": ["app/models/*"],
      "@utils/*": ["app/utils/*"],
      "@shared/*": ["app/shared/*"]
    }
  }
}
